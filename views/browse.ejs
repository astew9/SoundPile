<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="MusicPile">
    <meta name="author" content="">

    <title>SoundPile - Share your sounds!</title>

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id='browse'>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src='/images/logo.png' class='logo' /></a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <% if(typeof user === 'undefined') { %>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#about">About</a>
                    </li>
                    <li>
                        <a href="/browse">Browse</a>
                    </li>
                    <li>
                        <a href="/login">Login</a>
                    </li>
                </ul>
                <%} else {%>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/profile/<%=user.id%>"><%=user.username %></a>
                        </li>
                        <li>
                            <a href="#">Browse</a>
                        </li>
                        <li>
                            <a href="/logout">Logout</a>
                        </li>
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <header class='browse-header'>
        <h1 class='text-center browse-heading'>Browse</h1>
    </header>
    <div class="container">
        <div class='col-md-offset-1 col-md-10'>
            <form class='search-form'>
                <div class='row'>
                    <div class='col-md-10 col-xs-12'>
                          <input type="text" class="form-control" id="search_field" name='search_field' placeholder="Search for sounds here..">
                    </div>
                    <div class='col-md-2 col-xs-12'>
                        <button type="submit" class="btn btn btn-default">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div class='col-md-offset-1 col-md-10'>
            <div class="sounds-list-browse">
                <% for(var i = 0; i < sounds.length; i++) { %>
                    <div class='single-sound'>
                        <h4><%=sounds[i].title%></h4>
                        <audio controls>
                            <source src="<%=sounds[i].soundURL%>" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                        <p class='added-by'>Added by <a href='/profile/<%=sounds[i].uploader.id%>' class='added-by-username'>@<%=sounds[i].uploader.username%></a></p>
                        <hr/>
                    </div>
                <% } %>
            </div>
        </div>
        <footer>
            <div class="row">
                <div class="col-md-12">
                    <p>Copyright &copy; MusicPile 2016</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
